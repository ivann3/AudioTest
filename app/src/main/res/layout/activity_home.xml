<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.arvelm.audiotest.HomeActivity">

    <Button
        android:id="@+id/speaker_button"
        android:text="@string/speaker"
        style="@style/HomeButton"
        android:onClick="onClickHomeButton"/>

    <Button
        android:id="@+id/fmRadio_button"
        android:text="@string/fmRadio"
        style="@style/HomeButton"
        android:onClick="onClickHomeButton"/>

    <Button
        android:id="@+id/speakerDial_button"
        android:text="@string/speakerDial"
        style="@style/HomeButton"
        android:onClick="onClickHomeButton" />

    <Button
        android:id="@+id/receiverDial_button"
        android:text="@string/receiverDial"
        style="@style/HomeButton"
        android:onClick="onClickHomeButton" />

    <Button
        android:id="@+id/voip_button"
        android:text="@string/voip"
        style="@style/HomeButton"
        android:onClick="onClickHomeButton"/>


</LinearLayout>
